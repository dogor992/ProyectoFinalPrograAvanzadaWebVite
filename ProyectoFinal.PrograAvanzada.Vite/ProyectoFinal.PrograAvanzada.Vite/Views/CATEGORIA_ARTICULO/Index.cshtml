@model IEnumerable<ProyectoFinal.PrograAvanzada.Vite.Model.CATEGORIA_ARTICULO>

@{
    ViewBag.Title = "Categorias Articulos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear Categoria", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NOMBRE_CATEGORIA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SUBCATEGORIA)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NOMBRE_CATEGORIA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SUBCATEGORIA)
        </td>
        <td>
            @Html.ActionLink("Editar Categoria", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Detalles Categoria", "Details", new { id=item.ID }) |
            @Html.ActionLink("Borrar Categoria", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
