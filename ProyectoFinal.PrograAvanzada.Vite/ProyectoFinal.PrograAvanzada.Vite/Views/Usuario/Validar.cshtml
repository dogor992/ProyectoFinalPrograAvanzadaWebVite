
@{
    ViewBag.Title = "Validar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm()) {
<div class="menu-principal">
    <h2>Ingreso al sistema</h2>
    <table>
        <tr>
            <td>Ingrese el Usuario</td>
            <td>@Html.TextBox("user")</td>
        </tr>
        <tr>
            <td>Ingrese el password</td>
            <td>@Html.Password("password")</td>
        </tr>
        <tr>
            <td> <input type="submit" value="Login" onclick="validar()" /> </td>
        </tr>
    </table>
</div>

}

@section Scripts{
@Scripts.Render("~/bundles/jqueryval");
}
<script type="text/javascript">

    function validar() {
        var usuario = $("#user").val();
        var password = $("#password").val();

        if (usuario == '') {
            alert('Indique el usuario por favor');
            $("#user").focus();
            return false;
        }
        if (password == '') {
            alert('Indique el password por favor');
            $("#password").focus();
            return false;
        }
        return true;
    }
    
</script>
